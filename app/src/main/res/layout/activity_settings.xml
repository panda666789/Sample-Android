<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- 时间参数输入框 -->
        <EditText
            android:id="@+id/et_time_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入时间参数（单位：秒）"
            android:visibility="gone"
            android:inputType="number"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start|center_vertical" />

        <!-- Y轴最小值输入框 -->
        <EditText
            android:id="@+id/et_y_axis_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="请输入Y轴最小值"
            android:inputType="number"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start|center_vertical"
            android:layout_marginTop="12dp" />
        <!-- 实验编号输入框 -->
        <EditText
            android:id="@+id/et_experiment_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入实验编号"
            android:inputType="text"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start|center_vertical"
            android:layout_marginTop="12dp" />

        <!-- 录制时长配置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录制时长设置"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/teal_700"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_recording_duration"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="录制时长(秒)"
                android:inputType="number"
                android:padding="15dp"
                android:background="@drawable/rounded_edittext"
                android:elevation="4dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:gravity="start|center_vertical" />

            <TextView
                android:id="@+id/tv_duration_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40分钟"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="范围: 1-7200秒 (2小时)"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- MAC 地址列表标题 -->
        <TextView
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC 地址列表"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/teal_700"
            android:layout_gravity="start"
            android:paddingBottom="8dp"/>

        <!-- RecyclerView 显示MAC地址 -->
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"

            android:id="@+id/rv_mac_addresses"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:elevation="6dp"
            android:scrollbars="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- MAC 地址输入框 -->
        <EditText
            android:visibility="gone"

            android:id="@+id/et_mac_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入MAC地址"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start|center_vertical"
            android:layout_marginTop="12dp"/>

        <!-- 设备描述输入框 -->
        <EditText
            android:visibility="gone"

            android:id="@+id/et_mac_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入设备描述（可选）"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="4dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="start|center_vertical"
            android:layout_marginTop="12dp"/>

        <!-- 添加MAC地址按钮 -->
        <Button
            android:visibility="gone"

            android:id="@+id/btn_add_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加MAC地址"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>
        <Button
            android:visibility="gone"

            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登出"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</ScrollView>
