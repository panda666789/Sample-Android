<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 顶部固定：摄像头控制卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cameraControlCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 头部：标题 + 折叠按钮 -->
            <LinearLayout
                android:id="@+id/cameraHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="摄像头"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <!-- 录制状态指示器 -->
                <TextView
                    android:id="@+id/cameraRecordingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="● 录制中"
                    android:textSize="12sp"
                    android:textColor="#F44336"
                    android:visibility="gone" />

                <!-- 设置按钮 -->
                <ImageButton
                    android:id="@+id/cameraSettingsBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_settings"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="设置" />

                <ImageView
                    android:id="@+id/cameraExpandArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="展开"
                    android:rotation="180" />
            </LinearLayout>

            <!-- 可折叠内容区域 -->
            <LinearLayout
                android:id="@+id/cameraContentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- 摄像头选择按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFrontCamera"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:text="前置"
                        android:textSize="13sp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBackCamera"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="4dp"
                        android:text="后置"
                        android:textSize="13sp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDualCamera"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:text="双摄"
                        android:textSize="13sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <!-- 摄像头预览区域 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cameraPreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:background="#1A1A1A"
                    android:clipChildren="true"
                    android:clipToPadding="true">

                    <!-- 主预览 SurfaceView - 保持9:16比例居中 -->
                    <SurfaceView
                        android:id="@+id/mainCameraSurfaceView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="9:16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="1.0" />

                    <!-- 画中画预览（双摄时后置） -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/pipCameraContainer"
                        android:layout_width="60dp"
                        android:layout_height="106dp"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#FFFFFF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <SurfaceView
                            android:id="@+id/pipCameraSurfaceView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 预览占位符 -->
                    <LinearLayout
                        android:id="@+id/cameraPreviewPlaceholder"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#E8E8E8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:alpha="0.5" />

                        <TextView
                            android:id="@+id/cameraPlaceholderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="点击开始录制显示预览"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 心率显示（面部推理模式） -->
                <LinearLayout
                    android:id="@+id/heartRateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <com.tsinghua.sample.utils.PlotView
                        android:id="@+id/cameraPlotViewHR"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_bg_light" />

                    <TextView
                        android:id="@+id/cameraHeartRateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="心率: --"
                        android:textSize="14sp"
                        android:textColor="#E91E63"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 设备列表（不含摄像头） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deviceRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraControlCard"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 底部悬浮操作区 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- 状态文本 -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="准备就绪"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp" />

            <!-- 一键连接按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_one_click_connect"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="一键连接"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/teal_700"
                android:layout_marginBottom="8dp" />

            <!-- 主录制按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_all"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="开始录制"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp" />

            <!-- 设置按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="录制设置"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:strokeColor="@color/teal_700" />

            <!-- 隐藏的按钮引用（保持兼容性） -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_all"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:text="停止" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Timestamp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:text="标记" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 保留旧的摄像头相关View引用（为了兼容性，设为不可见） -->
    <androidx.cardview.widget.CardView
        android:id="@+id/frontCameraCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <SurfaceView
            android:id="@+id/frontCameraSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/backCameraCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <SurfaceView
            android:id="@+id/backCameraSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/frontCameraPlotCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.tsinghua.sample.utils.PlotView
            android:id="@+id/frontCameraPlotView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/frontCameraCloseBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/backCameraCloseBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/frontCameraPlotCloseBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
